  "version": "0.2.0",
  "configurations": [
    {
      "name": "attach to running node app for debugging",
      "processId": "${command:PickProcess}",
      "request": "attach",
      "skipFiles": ["<node_internals>/**"],
      "type": "pwa-node"
    },
    {
      "type": "pwa-node",
      "request": "launch",
      "name": "launch node app for debugging",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}\\server.js"
    }
  ]
}
